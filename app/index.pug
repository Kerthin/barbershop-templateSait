html
	head
		include template/head.pug
	body
		header.header
			nav.header__nav
				ul.header__list
					mixin horizontalListItemMix(link, nameLink)
						li.header__itemList
							a(class="header__itemLink" href=(`${link}`))= nameLink
					+horizontalListItemMix('#', 'HOME')
					+horizontalListItemMix('#', 'PORTFOLIO')
					+horizontalListItemMix('#', 'ABOUT US')
				.header__logoWrap
					.header__logo
				ul.header__list
					mixin horizontalListItemMix(link, nameLink)
						li.header__itemList
							a(class="header__itemLink" href=(`${link}`))= nameLink
					+horizontalListItemMix('#', 'HOME')
					+horizontalListItemMix('#', 'PORTFOLIO')
					+horizontalListItemMix('#', 'ABOUT US')
		main.container
			section.homeBlock
				.homeBlock__logoBox
			mixin productSectionMix(productBlockType, emptyImgBlockMix, floatMix)
				include template/partials/productSection.pug
			+productSectionMix('large', '1', 'left')
			+productSectionMix('twoItems', '2', 'right')
			+productSectionMix('fourItems', '3', 'left')
		include template/scripts.pug